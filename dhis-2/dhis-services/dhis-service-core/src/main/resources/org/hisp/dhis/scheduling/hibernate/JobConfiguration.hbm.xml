<?xml version="1.0"?>
<!DOCTYPE hibernate-mapping PUBLIC
        "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
        "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd"
        [<!ENTITY identifiableProperties SYSTEM "classpath://org/hisp/dhis/common/identifiableProperties.hbm">]
        >

<hibernate-mapping>
    <class name="org.hisp.dhis.scheduling.Configuration.JobConfiguration" table="jobconfiguration">

        <cache usage="read-write" />

        <id name="id" column="jobconfigurationid">
            <generator class="native" />
        </id>
        &identifiableProperties;

        <property name="name" column="name" not-null="true" unique="true" length="230" />

        <property name="key" not-null="true" />

        <property name="cronExpression" not-null="true" />

        <property name="jobType" not-null="true" />
    </class>
</hibernate-mapping>
